---
import Layout from "../../../layouts/Layout.astro";
import PlotFigure from "../../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../../assets/penguins.json";

export const prerender = false;

const { species } = Astro.params;

const filteredPenguins = penguins.filter(
    (penguin) => penguin.species === species,
);

const allSpecies = [...new Set(penguins.map((p) => p.species))];

const plotOptions = {
    grid: true,
    marks: [
        Plot.dot(filteredPenguins, {
            x: "culmen_length_mm",
            y: "culmen_depth_mm",
            fill: "steelblue",
            r: 4,
            fillOpacity: 0.7,
        }),
    ],
    x: {
        label: "Longueur du bec (mm)",
    },
    y: {
        label: "Profondeur du bec (mm)",
    },
    title: `Relation Longueur vs Profondeur du bec - ${species}`,
};
---

<Layout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Accueil
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <a href="/rendu-dynamique/" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Rendu Dynamique</a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{species}</span>
                    </div>
                </li>
            </ol>
        </nav>

        <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-6 mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        Pingouins {species}
                    </h1>
                    <p class="text-lg text-gray-600">
                        {filteredPenguins.length} pingouin(s) de l'esp√®ce {species}
                    </p>
                </div>
                <div class="mt-4 sm:mt-0">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                        üöÄ Rendu Dynamique
                    </span>
                </div>
            </div>
        </div>

        {filteredPenguins.length === 0 ? (
            <div class="bg-red-50 border border-red-200 rounded-lg p-8 text-center">
                <svg class="mx-auto h-12 w-12 text-red-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <h2 class="text-xl font-semibold text-red-800 mb-2">
                    Aucun pingouin trouv√©
                </h2>
                <p class="text-red-600">
                    L'esp√®ce "{species}" n'existe pas dans nos donn√©es.
                </p>
            </div>
        ) : (
            <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-6 mb-8">
                <PlotFigure options={plotOptions} />
            </div>
        )}

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
                Autres esp√®ces disponibles
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                {allSpecies
                    .filter(s => s !== species)
                    .map((speciesName) => (
                        <a 
                            href={`/rendu-dynamique/especes/${speciesName}`}
                            class="group flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-purple-300 hover:bg-purple-50 transition-all duration-200"
                        >
                            <div class="flex items-center">
                                <div class="w-3 h-3 bg-purple-400 rounded-full mr-3"></div>
                                <span class="font-medium text-gray-900 group-hover:text-purple-700">
                                    {speciesName}
                                </span>
                            </div>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>