                            {car["weight (lb)"] && <div>‚öñÔ∏è {car["weight (lb)"]} lb</div>}
                            {car["economy (mpg)"] && <div>‚õΩ {car["economy (mpg)"]} mpg</div>}
                            {car.cylinders && <div>üîß {car.cylinders} cylindres</div>}
