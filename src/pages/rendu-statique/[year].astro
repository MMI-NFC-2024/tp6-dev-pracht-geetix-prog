---
import Layout from "../../layouts/Layout.astro";
import PlotFigure from "../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import cars from "../../assets/cars.json";

export const prerender = true;

export async function getStaticPaths() {
    const allYears = [
        ...new Set(cars.map((c) => c.year).filter(Boolean)),
    ].sort((a, b) => a - b);
    
    return allYears.map((year) => ({
        params: { year: String(year) },
        props: {
            year: year,
            filteredCars: cars.filter((c) => c.year === year),
            allYears,
        },
    }));
}

const { year, filteredCars = [], allYears = [] } = Astro.props;

// Si appel√© sans param/props, on retourne √† l'index.
if (!year) {
    return Astro.redirect("/rendu-statique/");
}

const safeCars = filteredCars.filter(
    (c) => c["power (hp)"] != null && c["weight (lb)"] != null,
);

const plotOptions = {
    grid: true,
    marks: [
        Plot.dot(safeCars, {
            x: "weight (lb)",
            y: "power (hp)",
            r: 4,
            fill: "orange",
        }),
    ],
    x: { label: "Poids (lb)" },
    y: { label: "Puissance (hp)" },
    title: `Relation Puissance vs Poids - Voitures ${year}`,
};
---

<Layout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-orange-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                        </svg>
                        Accueil
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <a href="/rendu-statique/" class="ml-1 text-sm font-medium text-gray-700 hover:text-orange-600 md:ml-2">Rendu Statique</a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{year}</span>
                    </div>
                </li>
            </ol>
        </nav>

        <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-lg p-6 mb-8">
