                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        Voitures {year}
                    </h1>
                    <p class="text-lg text-gray-600">
                        {safeCars.length} voiture(s) de l'ann√©e {year} avec donn√©es compl√®tes
                    </p>
                    <p class="text-sm text-gray-500 mt-1">
                        {filteredCars.length} voiture(s) au total pour cette ann√©e
                    </p>
                </div>
                <div class="mt-4 sm:mt-0">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                        üìä Rendu Statique
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-6 mb-8">
            <PlotFigure options={plotOptions} />
        </div>

        <!-- Section avec informations sur les voitures de cette ann√©e -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
                Quelques voitures de {year}
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {filteredCars.slice(0, 6).map((car) => (
                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors duration-200">
                        <h4 class="font-semibold text-gray-900 mb-2 text-sm">{car.name}</h4>
